          },
          "500": {
            "description": "Failed to complete stage"
          }
        },
        "security": [
          {
            "JWTBearerAuth": []
          }
        ]
      }
    },
    "/v1/user/courses/{slug}/stages/{stage_slug}": {
      "get": {
        "tags": [
